@page "/binance"
@using TradingBot.Web.Models
@using TradingBot.Web.Services
@inject BinanceApiClientWrapper BinanceApi
@rendermode InteractiveServer

<PageTitle>Binance Market Data</PageTitle>

<h1>Binance Market Data</h1>

<div class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input @bind="searchSymbol" @bind:event="oninput" class="form-control" placeholder="Enter symbol (e.g., BTCUSDT)" />
                <button class="btn btn-primary" @onclick="SearchTicker" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    }
                    Search
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <button class="btn btn-secondary me-2" @onclick="LoadPopularTickers" disabled="@isLoading">Load Popular Pairs</button>
            <button class="btn btn-outline-secondary" @onclick="TestConnection" disabled="@isLoading">Test Connection</button>
            @if (connectionStatus.HasValue)
            {
                <span class="ms-2 badge @(connectionStatus.Value ? "bg-success" : "bg-danger")">
                    @(connectionStatus.Value ? "Connected" : "Disconnected")
                </span>
            }
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

@if (selectedTicker != null)
{
    <div class="card mb-4">
        <div class="card-header">
            <h5>@selectedTicker.Symbol Price Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <h6>Last Price</h6>
                    <h3>$@selectedTicker.LastPrice.ToString("N2")</h3>
                </div>
                <div class="col-md-3">
                    <h6>24h Change</h6>
                    <h4 class="@(selectedTicker.PriceChange >= 0 ? "text-success" : "text-danger")">
                        @selectedTicker.PriceChange.ToString("N2") (@selectedTicker.PriceChangePercent.ToString("N2")%)
                    </h4>
                </div>
                <div class="col-md-3">
                    <h6>24h High</h6>
                    <p class="fs-5">$@selectedTicker.HighPrice.ToString("N2")</p>
                </div>
                <div class="col-md-3">
                    <h6>24h Low</h6>
                    <p class="fs-5">$@selectedTicker.LowPrice.ToString("N2")</p>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <h6>24h Volume</h6>
                    <p>@selectedTicker.Volume.ToString("N2")</p>
                </div>
                <div class="col-md-6">
                    <h6>Last Updated</h6>
                    <p>@selectedTicker.Timestamp.ToString("yyyy-MM-dd HH:mm:ss") UTC</p>
                </div>
            </div>
            <button class="btn btn-info mt-2" @onclick="LoadOrderBook">Load Order Book</button>
        </div>
    </div>
}

@if (orderBook != null)
{
    <div class="card mb-4">
        <div class="card-header">
            <h5>Order Book - @orderBook.Symbol</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6 class="text-success">Bids (Buy Orders)</h6>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bid in orderBook.Bids.Take(10))
                            {
                                <tr>
                                    <td class="text-success">@bid.Price.ToString("N2")</td>
                                    <td>@bid.Quantity.ToString("N6")</td>
                                    <td>@((bid.Price * bid.Quantity).ToString("N2"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6">
                    <h6 class="text-danger">Asks (Sell Orders)</h6>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ask in orderBook.Asks.Take(10))
                            {
                                <tr>
                                    <td class="text-danger">@ask.Price.ToString("N2")</td>
                                    <td>@ask.Quantity.ToString("N6")</td>
                                    <td>@((ask.Price * ask.Quantity).ToString("N2"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

@if (tickers != null && tickers.Length > 0)
{
    <div class="card">
        <div class="card-header">
            <h5>Popular Trading Pairs</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Symbol</th>
                            <th>Last Price</th>
                            <th>24h Change</th>
                            <th>24h High</th>
                            <th>24h Low</th>
                            <th>Volume</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticker in tickers)
                        {
                            <tr>
                                <td><strong>@ticker.Symbol</strong></td>
                                <td>$@ticker.LastPrice.ToString("N2")</td>
                                <td class="@(ticker.PriceChange >= 0 ? "text-success" : "text-danger")">
                                    @ticker.PriceChange.ToString("N2") (@ticker.PriceChangePercent.ToString("N2")%)
                                </td>
                                <td>$@ticker.HighPrice.ToString("N2")</td>
                                <td>$@ticker.LowPrice.ToString("N2")</td>
                                <td>@ticker.Volume.ToString("N0")</td>
                                <td>
                                    <button class="btn btn-sm btn-primary" @onclick="() => SelectTicker(ticker)">
                                        View Details
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@code {
    private string searchSymbol = "BTCUSDT";
    private bool isLoading = false;
    private string? errorMessage;
    private bool? connectionStatus;
    
    private BinanceTickerData? selectedTicker;
    private BinanceTickerData[]? tickers;
    private BinanceOrderBookData? orderBook;

    protected override async Task OnInitializedAsync()
    {
        await LoadPopularTickers();
    }

    private async Task TestConnection()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            connectionStatus = await BinanceApi.TestConnectionAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to test connection: {ex.Message}";
            connectionStatus = false;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SearchTicker()
    {
        if (string.IsNullOrWhiteSpace(searchSymbol))
        {
            errorMessage = "Please enter a symbol";
            return;
        }

        isLoading = true;
        errorMessage = null;
        orderBook = null;
        
        try
        {
            selectedTicker = await BinanceApi.GetTickerAsync(searchSymbol.ToUpper());
            if (selectedTicker == null)
            {
                errorMessage = $"Symbol {searchSymbol} not found";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error fetching ticker: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadPopularTickers()
    {
        isLoading = true;
        errorMessage = null;
        
        try
        {
            // Load specific popular pairs
            var popularSymbols = new[] { "BTCUSDT", "ETHUSDT", "BNBUSDT", "SOLUSDT", "XRPUSDT", "ADAUSDT" };
            var tasks = popularSymbols.Select(symbol => BinanceApi.GetTickerAsync(symbol));
            var results = await Task.WhenAll(tasks);
            tickers = results.Where(t => t != null).ToArray()!;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading tickers: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SelectTicker(BinanceTickerData ticker)
    {
        selectedTicker = ticker;
        orderBook = null;
        searchSymbol = ticker.Symbol;
    }

    private async Task LoadOrderBook()
    {
        if (selectedTicker == null) return;

        isLoading = true;
        errorMessage = null;
        
        try
        {
            orderBook = await BinanceApi.GetOrderBookAsync(selectedTicker.Symbol);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading order book: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}

