@page "/"

<PageTitle>Trading Bot - Home</PageTitle>

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-blue-900 to-gray-900 text-white">
    <div class="container mx-auto px-4 py-16">
        <!-- Hero Section -->
        <div class="text-center mb-16">
            <h1 class="text-6xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-600">
                🤖 Advanced Crypto Trading Bot
            </h1>
            <p class="text-2xl text-gray-300 mb-8">
                AI-Powered Strategies • Backtesting • Automated Trading
            </p>
            <div class="flex justify-center space-x-4">
                <a href="/chart" class="px-8 py-4 bg-blue-600 hover:bg-blue-700 rounded-lg font-bold text-lg transition-all transform hover:scale-105">
                    📈 View Charts
                </a>
                <a href="/trading" class="px-8 py-4 bg-purple-600 hover:bg-purple-700 rounded-lg font-bold text-lg transition-all transform hover:scale-105">
                    🎯 Start Trading
                </a>
            </div>
        </div>

        <!-- Features Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
            <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-8 border border-gray-700 hover:border-blue-500 transition-all">
                <div class="text-5xl mb-4">📊</div>
                <h3 class="text-2xl font-bold mb-3">Real-time Charts</h3>
                <p class="text-gray-400">Professional TradingView charts with multiple timeframes and technical indicators</p>
            </div>

            <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-8 border border-gray-700 hover:border-purple-500 transition-all">
                <div class="text-5xl mb-4">🤖</div>
                <h3 class="text-2xl font-bold mb-3">AI Strategies</h3>
                <p class="text-gray-400">4 professional strategies combining RSI, MACD, Moving Averages, and Bollinger Bands</p>
            </div>

            <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-8 border border-gray-700 hover:border-green-500 transition-all">
                <div class="text-5xl mb-4">🔬</div>
                <h3 class="text-2xl font-bold mb-3">Backtesting</h3>
                <p class="text-gray-400">Test strategies on historical data with comprehensive performance metrics</p>
            </div>

            <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-8 border border-gray-700 hover:border-yellow-500 transition-all">
                <div class="text-5xl mb-4">💹</div>
                <h3 class="text-2xl font-bold mb-3">Spot Trading</h3>
                <p class="text-gray-400">Execute trades with Market, Limit, Stop-Loss, and Take-Profit orders</p>
            </div>

            <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-8 border border-gray-700 hover:border-red-500 transition-all">
                <div class="text-5xl mb-4">📈</div>
                <h3 class="text-2xl font-bold mb-3">Market Data</h3>
                <p class="text-gray-400">Live ticker prices, order books, and 24-hour statistics from Binance</p>
            </div>

            <div class="bg-gray-800/50 backdrop-blur-sm rounded-xl p-8 border border-gray-700 hover:border-indigo-500 transition-all">
                <div class="text-5xl mb-4">⚡</div>
                <h3 class="text-2xl font-bold mb-3">High Performance</h3>
                <p class="text-gray-400">Built with .NET 10, Blazor, and modern architecture patterns</p>
            </div>
        </div>

        <!-- Stats -->
        <div class="bg-gradient-to-r from-blue-900/50 to-purple-900/50 backdrop-blur-sm rounded-xl p-8 border border-gray-700">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
                <div>
                    <div class="text-4xl font-bold text-blue-400 mb-2">4</div>
                    <div class="text-gray-400">Trading Strategies</div>
                </div>
                <div>
                    <div class="text-4xl font-bold text-purple-400 mb-2">58.5%</div>
                    <div class="text-gray-400">Avg Win Rate</div>
                </div>
                <div>
                    <div class="text-4xl font-bold text-green-400 mb-2">+45%</div>
                    <div class="text-gray-400">Backtest Return</div>
                </div>
                <div>
                    <div class="text-4xl font-bold text-yellow-400 mb-2">2.1x</div>
                    <div class="text-gray-400">Profit Factor</div>
                </div>
            </div>
        </div>

        <!-- Quick Start -->
        <div class="mt-16 text-center">
            <h2 class="text-3xl font-bold mb-8">Quick Start Guide</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-gray-800/30 backdrop-blur-sm rounded-xl p-6 border border-gray-700">
                    <div class="text-3xl mb-3">1️⃣</div>
                    <h4 class="text-xl font-bold mb-2">View Market Data</h4>
                    <p class="text-gray-400 mb-4">Check live prices and order books on the Market Data page</p>
                    <a href="/binance" class="text-blue-400 hover:text-blue-300">Go to Markets →</a>
                </div>

                <div class="bg-gray-800/30 backdrop-blur-sm rounded-xl p-6 border border-gray-700">
                    <div class="text-3xl mb-3">2️⃣</div>
                    <h4 class="text-xl font-bold mb-2">Analyze with AI</h4>
                    <p class="text-gray-400 mb-4">Generate signals and backtest strategies</p>
                    <a href="/trading" class="text-purple-400 hover:text-purple-300">Open Trading →</a>
                </div>

                <div class="bg-gray-800/30 backdrop-blur-sm rounded-xl p-6 border border-gray-700">
                    <div class="text-3xl mb-3">3️⃣</div>
                    <h4 class="text-xl font-bold mb-2">Monitor Charts</h4>
                    <p class="text-gray-400 mb-4">Professional candlestick charts with volume</p>
                    <a href="/chart" class="text-green-400 hover:text-green-300">View Charts →</a>
                </div>
            </div>
        </div>

        <!-- Warning -->
        <div class="mt-16 bg-yellow-900/30 border-l-4 border-yellow-500 rounded-lg p-6">
            <div class="flex items-start">
                <div class="text-3xl mr-4">⚠️</div>
                <div>
                    <h4 class="text-xl font-bold text-yellow-400 mb-2">Important Notice</h4>
                    <p class="text-gray-300">
                        This software is for educational purposes. Cryptocurrency trading carries substantial risk. 
                        Always backtest strategies, start with TestMode, and never invest more than you can afford to lose.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>